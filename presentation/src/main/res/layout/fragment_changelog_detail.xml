<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".features.changelogdetail.ChangelogDetailActivity"
  >

  <android.support.v7.widget.Toolbar
    android:id="@+id/changelogToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_toolbar_gradient"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    style="@style/Widget.Changelog.Toolbar"
    />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    android:scrollbars="vertical"
    >

    <TextView
      android:id="@+id/detailTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/mdBackground"
      android:bufferType="spannable"
      android:padding="@dimen/padding_normal"
      android:textAppearance="@style/ListItemTextAppearance.Secondary"
      tools:text="@tools:sample/lorem/random"
      />
  </ScrollView>
</LinearLayout>
